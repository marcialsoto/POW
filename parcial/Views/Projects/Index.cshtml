@model IEnumerable<UNFV.Portfolio.Models.Project>

@{
    ViewBag.Title = "Proyectos";
    ViewBag.Message = "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry’s standard dummy text ever since the 1500s.";
}

@section Styles {
    @Styles.Render("~/Content/lightbox_css")
}
<div class="section" id="projects">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-mobile-fullwidth margin-seven-bottom xs-margin-ten-bottom page-header">
                <h4 class="heading">@ViewBag.Title <small>@Html.ActionLink("+ Agregar", "Create")</small></h4>
                <p>@ViewBag.Message</p>
            </div>
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-3 col-md-6 col-xs-12">
                        <div class="thumbnail">
                            <a href="../Images/@Html.DisplayFor(modelItem => item.Thumbnail)" class="thumbnail" data-lightbox="projects" data-title="@Html.DisplayFor(modelItem => item.Name)"><img src="../Images/@Html.DisplayFor(modelItem => item.Thumbnail)" alt="@Html.DisplayFor(modelItem => item.Name)"></a>
                            <div class="caption">
                                <h3><a href='@Url.Action("Details", new { id = item.ProjectID })'>@Html.DisplayFor(modelItem => item.Name)</a></h3>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                <p>
                                @Html.DisplayFor(modelItem => item.Skill.Name)<br />
                                @Html.DisplayFor(modelItem => item.Enterprise.Name)</p>
                                <p>
                                    <small>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/lightbox_js")
}


