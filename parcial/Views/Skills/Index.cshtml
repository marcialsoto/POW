@model IEnumerable<UNFV.Portfolio.Models.Skill>

@{
    ViewBag.Title = "Habilidades";
}

<div class="section" id="skills">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-mobile-fullwidth margin-seven-bottom xs-margin-ten-bottom page-header">
                <h4 class="heading">@ViewBag.Title <small>@Html.ActionLink("+ Agregar", "Create")</small></h4>
            </div>
            @foreach (var item in Model)
            {
                <div class="media col-sm-6 col-lg-4 col-md-6 col-xs-12">
                    <div class="media-left">
                        <a href='@Url.Action("Details", new { id = item.SkillID })'>
                            <span class="glyphicon glyphicon-@Html.DisplayFor(modelItem => item.Icon)" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><a href='@Url.Action("Details", new { id = item.SkillID })'>@Html.DisplayFor(modelItem => item.Name)</a></h4>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        <p><small>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SkillID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SkillID })    
                        </small></p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


